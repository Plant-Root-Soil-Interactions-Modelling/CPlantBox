FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
      build-essential \
      git \
      python3 \
      python3-dev \
      python3-venv \
      python3-pip \
      cmake \
      ninja-build \
      libsuitesparse-dev \
      libsundials-dev \
    && rm -rf /var/lib/apt/lists/*

RUN python3 -m pip install -U pip build

WORKDIR /src

